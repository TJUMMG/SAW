{
 "setting_config": {
  "cuda": true,
  "gpu_id": "0",
  "seed": 20
 },
 "data_config": {
  "training_datasets": [
   "jhmdb_sentences"
  ],
  "testing_datasets": [
   "jhmdb_sentences"
  ],
  "datasets_root": "/media/wwk/HDD1/dataset/referring_video_segmentation/jhmdb_sentences",
  "input_size": [
   320,
   320
  ],
  "clip_size": 8,
  "augmentations": {
